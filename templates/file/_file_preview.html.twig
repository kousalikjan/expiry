<article class="card card-side bg-base-100 shadow-xl border border-slate-100 h-28">
    <figure>
        <img
        {% if file.mimeType matches '/image*/' %}
        src="{{ path('app_item_file_download', {
            userId: user.id,
            catId: category.id,
            itemId: item.id,
            fileId: file.id,
            thumbnail: true,
        }) }}"
        {% else %}
            src="{{ asset('img/pdf-icon.jpg') }}"
        {% endif %}
             alt="Photo for {{ item.name }}" class="h-full w-24"/>
    </figure>
    <div class="flex items-center justify-around w-full relative">
        <a
            href="{{ path('app_item_file_download', {
                    userId: user.id,
                    catId: category.id,
                    itemId: item.id,
                    fileId: file.id
                }) }}"
            class="flex flex-col items-center justify-center hover:text-info z-50"
            data-turbo-frame="_top"
        >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
            {{ 'View'|trans }}
        </a>

        <a
            href="{{ path('app_item_file_download', {
                    userId: user.id,
                    catId: category.id,
                    itemId: item.id,
                    fileId: file.id
                })~'/?save=true' }}"
            class="flex flex-col items-center justify-center hover:text-info z-50"
            data-turbo-frame="_top"
        >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
        </svg>
            {{ 'Download'|trans }}
        </a>

        <a
            href="{{ path('app_item_file_delete', {
                userId: user.id,
                catId: category.id,
                itemId: item.id,
                fileId: file.id
            })}}{% if redirect %}?redirect=1{% endif %}"
            class="flex flex-col items-center justify-center text-error hover:text-red-800 z-50">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
        </svg>
            {{ 'Delete'|trans }}
        </a>
    <span class="absolute bottom-1 right-3 text-xs">{{ file.originalFilename[:32] }}.{{ file.mimeType|split('/')[1] }}</span>
    </div>

</article>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% include('_navbar.html.twig') %}


        <div class="toast toast-bottom toast-end bottom-10 absolute z-50">
            {% for message in app.flashes('error') %}
                <div class="flex bg-error p-3.5 rounded-xl gap-8 justify-between items-center" {{ stimulus_controller('toast-hide') }}>
                    <span>{{ message }}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" data-action="click->toast-hide#close">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="flex bg-success p-3.5 rounded-xl gap-8 justify-between items-center" {{ stimulus_controller('toast-hide') }}>
                    <span>{{ message }}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" data-action="click->toast-hide#close">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </div>
            {% endfor %}
            {% for message in app.flashes('info') %}
                <div class="flex bg-info p-3.5 rounded-xl gap-8 justify-between items-center" {{ stimulus_controller('toast-hide') }}>
                    <span>{{ message }}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" data-action="click->toast-hide#close">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </div>
            {% endfor %}
        </div>
        {% block body %}{% endblock %}
    </body>
</html>

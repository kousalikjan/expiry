{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <article class="m-8 mt-6">
            <section>
                <h1 class="h1 mb-10">Categories</h1>
                <div class="flex flex-col gap-5 mb-12" {{ stimulus_controller('kebab-menu') }}>
                {% for category in categories %}
                    {{ include('category/_category_preview.html.twig') }}
                {% endfor %}
                </div>
                <a href="{{ path('app_category_create', {userId: app.user.id}) }}" class="btn btn-outline btn-accent">
                    <article class="flex gap-4 items-center text-slate-600 ">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 10.5v6m3-3H9m4.06-7.19l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                        </svg>
                        <p class="text-xl">New category</p>
                    </article>
                </a>
            </section>
    </article>
{% endblock %}
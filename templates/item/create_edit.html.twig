{% extends 'base.html.twig' %}

{% block title %}New item{% endblock %}

{% block body %}
    <article class="flex flex-col mt-6 mx-8 gap-6 items-center">
        <h1 class="h1">New item</h1>
        {{ form_start(form, {'attr': {'class': 'form-control w-full max-w-md gap-6'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.category) }}

        {% include 'form/_number_plus_minus.html.twig' with {
            'input': form.amount
        } %}
        {{ form_row(form.purchase) }}
        {{ form_row(form.warranty.expiration) }}
        {{ form_row(form.warranty.notifyDaysBefore) }}


        <button type="submit" class="btn btn-primary max-w-md">Create</button>
        {{ form_end(form) }}
    </article>
{% endblock %}

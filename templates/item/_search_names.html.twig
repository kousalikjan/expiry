{% import 'macros.twig' as macros %}
{% if items|length > 0 %}
<div class="flex flex-col gap-2 bg-white w-full border border-slate-400 rounded-lg py-2">
    {% for item in items %}
            <span
                class="px-2 hover:text-primary cursor-pointer"
                {{ stimulus_action('search-preview', 'onNameClick', 'click') }}
            >{{ item.name }}</span>
    {% endfor %}
</div>
{% endif %}
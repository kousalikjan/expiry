{% extends 'base.html.twig' %}

{% block title %}New item{% endblock %}


{% block body %}
    <article>
        <h1 class="h1">Add files</h1>
        <form action="{{ path('app_item_add_file', {userId: user.id, catId: category.id, itemId: item.id}) }}" method="POST" enctype="multipart/form-data">
            <input type="file" name="item-file" class="file-input file-input-bordered">
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </article>

{% endblock %}
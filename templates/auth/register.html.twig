{% extends 'base.html.twig' %}

{% block metas %}
    <meta name="turbo-cache-control" content="no-preview">
{% endblock %}

{% block title %}{{ 'Sign up'|trans }} | Expiry{% endblock %}

{% block body %}
    <article class="base-article">
        <h1 class="h1">{{ 'Sign up'|trans }}</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'form-control w-full max-w-md gap-8'}}) }}
        {{ form_row(registrationForm.email) }}
        <div>
            {{ form_row(registrationForm.plainPassword) }}
            <p>{{ 'Password must contain at least 6 characters'|trans }}</p>
        </div>

        <button type="submit" class="btn btn-primary max-w-md">{{ 'Register'|trans }}</button>
        {{ form_end(registrationForm) }}
        <a href="{{ path('app_login') }}" class="text-info hover:link">{{ 'Already have an account'|trans }}?</a>
    </article>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}
    <article class="flex flex-col items-center my-16 gap-6">
        <h1 class="h1">{{ 'Sign up'|trans }}</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'form-control w-full px-6 max-w-md gap-8'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}

        <div class="flex items-center gap-4">
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_errors(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox checkbox-primary'}}) }}
        </div>

            <button type="submit" class="btn max-w-md">{{ 'Register'|trans }}</button>
        {{ form_end(registrationForm) }}
    </article>
{% endblock %}

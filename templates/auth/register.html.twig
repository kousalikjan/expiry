{% extends 'base.html.twig' %}

{% block metas %}
    <meta name="turbo-cache-control" content="no-preview">
{% endblock %}

{% block title %}Sign up{% endblock %}

{% block body %}
    <article class="base-article">
        <h1 class="h1">{{ 'Sign up'|trans }}</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'form-control w-full max-w-md gap-8'}}) }}
        {{ form_row(registrationForm.email) }}
        <div>
            {{ form_row(registrationForm.plainPassword) }}
            <p>Password must contain at least 6 characters</p>
        </div>

        <div class="flex items-center gap-2">
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_errors(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox checkbox-primary'}}) }}
        </div>

            <button type="submit" class="btn max-w-md">{{ 'Register'|trans }}</button>
        {{ form_end(registrationForm) }}
    </article>
{% endblock %}

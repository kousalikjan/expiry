{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block breadcrumbs %}
    <li><a href="{{ path('app_index') }}">Home</a></li>
    <li><a href="#">Profile</a></li>
{% endblock %}

{% block body %}
    <article class="m-8 flex flex-col gap-8">
            <section>
                <h1 class="h1 mb-4">Profile page</h1>
                <p>You can change your password or delete your account here.</p>
            </section>
            <section>
                <h2 class="text-2xl font-semibold mb-4">Preferences</h2>
                {{ form_start(form, {'attr': {'class': 'form-control w-full max-w-md gap-6'}}) }}
                {{ form_row(form.defaultCurrency) }}
                <button type="submit" class="btn btn-primary btn-outline max-w-md">submit</button>
                {{ form_end(form) }}
            </section>
            <section>
                <h2 class="text-2xl font-semibold">Password change</h2>
            </section>
    </article>
{% endblock %}